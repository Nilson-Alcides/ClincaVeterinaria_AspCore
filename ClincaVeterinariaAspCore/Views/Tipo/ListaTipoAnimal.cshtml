@model IEnumerable<ClincaVeterinariaAspCore.Models.TipoAnimal>

@{
    ViewData["Title"] = "ListaTipoAnimal";
}

<h1>ListaTipoAnimal</h1>

<p>
    <a asp-action="cadtipo" asp-controller="tipo">Cadastrar</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tipo)
                </th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipo)
                    </td>

                    <td>
                        <button type="button" class="btn btn-info btn-sm">
                        @Html.ActionLink("Editar", "editarTipo", new { id=item.Id }) |
                        </button>
                        <button type="button" class="btn btn-info btn-sm">                        
                            @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
                        </button>
                        <button type="button" class="btn btn-danger btn-sm da" style="color:black">                        
                            @Html.ActionLink("Excluir", "Delete", new { id=item.Id },
                            new { onclick = "return confirm('Deseja realmente Excluir este item?');" })
                        </button> 
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>