@model IEnumerable<ClincaVeterinariaAspCore.Models.Animal>

@{
    ViewData["Title"] = "ListaAnimal";
}

<h1>ListaAnimal</h1>

<p>
    <a asp-action="CadAnimal" asp-controller="Animal">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nomeAni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RefCliente.nomeCli)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RefRaca.racaAni)
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nomeAni)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RefCliente.nomeCli)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RefRaca.racaAni)
                </td>
            <td>
                    @Html.ActionLink("Atualizar", "EditarAnimal", new { id=item.Id }) |
                    @Html.ActionLink("Detalhes", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Exclur", "Delete", new { id=item.Id }, 
                    new {onclick = "return confirm('Deseja realmente Excluir este item?');"})
            </td>
        </tr>
}
    </tbody>
</table>
