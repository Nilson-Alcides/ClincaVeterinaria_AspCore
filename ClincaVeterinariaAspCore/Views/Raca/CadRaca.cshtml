@model ClincaVeterinariaAspCore.Models.Raca

@{
    ViewData["Title"] = "CadRaca";
}



<h4>Cadastro de Raca</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CadRaca">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.RefTipoAnimal.Id, ViewBag.Lista as SelectList, "Selecione o tipo",
                    htmlAttributes: new { @class = "form-control" })

                </div>
            </div>   
          
            
            <div class="form-group">
                <label asp-for="racaAni" class="control-label"></label>
                <input asp-for="racaAni" class="form-control" />
                <span asp-validation-for="racaAni" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
